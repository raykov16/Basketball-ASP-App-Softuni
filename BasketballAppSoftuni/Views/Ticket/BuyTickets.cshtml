@model TicketViewModel

<section>
	<div class="container py-5 h-100">
		<div class="row d-flex justify-content-center align-items-center h-100">
			<div class="col-12 col-md-8 col-lg-6 col-xl-5">
				<div class="card bg-dark text-white" style="border-radius: 1rem;">
					<div class="card-body p-5 text-center">
						<form asp-controller="Ticket" asp-action="BuyTickets" method="post">
							<div class="mb-md-5 mt-md-4 pb-5">
								<h2 class="fw-bold mb-2 text-uppercase">Match</h2>
								<div class="row">
									<div class="col">
										<img src="@Model.HomeTeamLogo" class="rounded-circle" style="width: 5rem;" />
									</div>
									<div class="col mt-4">
										<h5 class="fw-bold">VS</h5>
									</div>
									<div class="col">
										<img src="@Model.AwayTeamLogo" class="rounded-circle" style="width: 5rem;" />
									</div>
								</div>
								<p class="text-white-50 mb-5">Location: @Model.ArenaName - @Model.ArenaLocation</p>
								<div asp-validation-summary="ModelOnly" class="text-danger"></div>

								<div class="form-outline form-white mb-4">
									<label asp-for="@Model.FirstName" class="form-label">First name</label>
									<input asp-for="@Model.FirstName" class="form-control" aria-required="true" />
									<span asp-validation-for="FirstName" class="text-danger"></span>
								</div>

								<div class="form-outline form-white mb-4">
									<label asp-for="@Model.LastName" class="form-label">Last name</label>
									<input asp-for="@Model.LastName" class="form-control" aria-required="true" />
									<span asp-validation-for="LastName" class="text-danger"></span>
								</div>

								<div class="form-outline form-white mb-4">
									<label asp-for="@Model.ShippingAddress" class="form-label">Shipping address</label>
									<input asp-for="@Model.ShippingAddress" class="form-control" aria-required="true" />
									<span asp-validation-for="ShippingAddress" class="text-danger"></span>
								</div>


								<div class="form-outline form-white mb-4">
									<label asp-for="@Model.Quantity" class="form-label">Quantity</label>
									<input asp-for="@Model.Quantity" class="form-control" type="number" min="1" max="@Model.TicketsAvailable" aria-required="true" />
									<span asp-validation-for="Quantity" class="text-danger"></span>
								</div>
								<p class="text-white-50 mb-5">Tickets available: @Model.TicketsAvailable</p>

								<button class="btn btn-outline-light btn-lg px-5" type="submit">Order</button>

								<input asp-for="@Model.MatchId" type="hidden" value="@Model.MatchId"/>
								<input asp-for="@Model.HomeTeamLogo" type="hidden" value="@Model.HomeTeamLogo" />
								<input asp-for="@Model.AwayTeamLogo" type="hidden" value="@Model.AwayTeamLogo" />
								<input asp-for="@Model.ArenaName" type="hidden" value="@Model.ArenaName"/>
								<input asp-for="@Model.ArenaLocation" type="hidden" value="@Model.ArenaLocation" />
								<input asp-for="@Model.TicketsAvailable" type="hidden" value="@Model.TicketsAvailable"/>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>