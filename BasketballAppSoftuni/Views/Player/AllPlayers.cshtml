@model List<PlayerTeamAndPositionViewModel>

<form asp-controller="Player" asp-action="AllPlayers">
	<div class="row m-5">
		<div class="col-4">
			<input type="text" class="form-control text-center" placeholder="Enter a name" name="nameSearchCriteria" style="margin-bottom: 3px;">
		</div>
		<div class="col-4">
			<button type="submit" class="btn btn-primary" mt-2>Search</button>
		</div>
		<div class="col-4">
			<div class="dropdown">
				<button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
					Filter by position
				</button>
			  <ul class="dropdown-menu">
				<li><a class="dropdown-item" asp-route-position="PG" asp-controller="Player" asp-action="AllPlayers">PG</a></li>
				<li><a class="dropdown-item" asp-route-position="SG" asp-controller="Player" asp-action="AllPlayers">SG</a></li>
				<li><a class="dropdown-item" asp-route-position="PF" asp-controller="Player" asp-action="AllPlayers">PF</a></li>
				<li><a class="dropdown-item" asp-route-position="SF" asp-controller="Player" asp-action="AllPlayers">SF</a></li>
				<li><a class="dropdown-item" asp-route-position="F" asp-controller="Player" asp-action="AllPlayers">F</a></li>
				<li><a class="dropdown-item" asp-route-position="C" asp-controller="Player" asp-action="AllPlayers">C</a></li>
			  </ul>
			</div>
		</div>
	</div>
</form>
@if (Model.Count == 0)
{
		<div class="text-center">
			<h1 style="color: white; font: bold">There are no players found!</h1>
		</div>
}
<div class="text-center row m-5">
	@foreach (var player in Model)
	{
			<div class="card col-4 m-2" style="width: 14rem;">
				<a asp-route-playerId="@player.Id" asp-controller="Player" asp-action="PlayerDetails">
					<img class="card-img-top myImage" style="width: 12rem"
				 src="@player.PictureURL">
				</a>
				<div class="card-body">
					<h5 class="card-title mt-1">@player.FullName</h5>
					<p class="mb-0">Position: @player.Position</p>
					<p class="mb-0">Team: @player.TeamName</p>
				</div>
			</div>
	}
</div>
