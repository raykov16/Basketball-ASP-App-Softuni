@model IEnumerable<UpdateMatchResultModel>

@if (Model.Count() == 0)
{
	<h1 class="text-center text-uppercase" style="color :aliceblue;">All matches are up to date!</h1>
}
else
{
	<table class="table table-hover table-dark">
		<thead>
			<tr>
				<th scope="col" class="text-center">Home team</th>
				<th scope="col"></th>
				<th scope="col" class="text-center">Result</th>
				<th scope="col"></th>
				<th scope="col" class="text-center">Away team</th>
				<th scope="col" class="text-center">Match date</th>
				<th scope="col"></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var m in Model)
			{
				<tr>
					<td style="padding-top:  1.3rem;">
						@m.HomeTeamName
					</td>
					<form method="post">
					<td class="text-center" style="padding-top: 1.3rem;">
						<input type="number" min="0" name="HomeTeamPoints" />
					</td>
					<td class="text-center" style="padding-top: 1.3rem">:</td>
					<td class="text-center" style="padding-top: 1.3rem;">
						<input type="number" min="0" name="AwayTeamPoints" />
						<input type="hidden" value="@m.MatchId" name="MatchId" />
					</td>
					<td class="text-end" style="padding-top:  1.3rem;">
							@m.AwayTeamName
					</td>
					<td class="text-center" style="padding-top:  1.3rem;">
							@m.MatchDate
					</td>
					<td class="text-center">
						<button class="btn btn-outline-light btn-md px-5" type="submit">Update</button>
					</td>
					</form>
				</tr>
			}
		</tbody>
	</table>
}