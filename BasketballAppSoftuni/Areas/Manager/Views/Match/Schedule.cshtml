@model ScheduleMatchModel

<div class="container py-5 h-100">
	<div class="row d-flex justify-content-center align-items-center h-100">
		<div class="col-12 col-md-8 col-lg-6 col-xl-5">
			<div class="card bg-dark text-white" style="border-radius: 1rem;">
				<div class="card-body p-5 text-center">
					<form method="post">
						<div class="mb-md-5 mt-md-4 pb-5">

							<h2 class="fw-bold mb-2 text-uppercase">Schedule a match</h2>
							<div asp-validation-summary="ModelOnly" class="text-danger"></div>

							<div class="text-center mb-3">
								<label asp-for="@Model.HomeTeamId" class="form-label">Home team</label>
								<select asp-for="@Model.HomeTeamId" class="form-control">
									@foreach (var team in Model.AllTeams)
									{
										<option value="@team.Id">@team.Name</option>
									}
								</select>
								<span asp-validation-for="HomeTeamId" class="text-danger"></span>
							</div>

							<div class="text-center mb-3">
								<label asp-for="@Model.AwayTeamId" class="form-label">Away team</label>
								<select asp-for="@Model.AwayTeamId" class="form-control">
									@foreach (var team in Model.AllTeams)
									{
										<option value="@team.Id">@team.Name</option>
									}
								</select>
								<span asp-validation-for="AwayTeamId" class="text-danger"></span>
							</div>

							<div class="form-outline form-white mb-4">
								<label asp-for="@Model.MatchDate" class="form-label">Match date</label>
								<input asp-for="@Model.MatchDate" class="form-control" aria-required="true" type="date"/>
								<span asp-validation-for="MatchDate" class="text-danger"></span>
							</div>

							<div class="form-outline form-white mb-4">
								<label asp-for="@Model.MatchTime" class="form-label">Match Time</label>
								<input asp-for="@Model.MatchTime" class="form-control" aria-required="true" type="time" />
								<span asp-validation-for="MatchTime" class="text-danger"></span>
							</div>

							<div class="form-outline form-white mb-4">
								<label asp-for="@Model.TicketPrice" class="form-label">Ticket price</label>
								<input asp-for="@Model.TicketPrice" class="form-control" aria-required="true" type="number" min="0.00" max="120.00" />
								<span asp-validation-for="TicketPrice" class="text-danger"></span>
							</div>

							<button class="btn btn-outline-light btn-lg px-5" type="submit">Schedule</button>

						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}